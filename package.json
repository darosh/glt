{
  "name": "glt",
  "description": "WebGL Procedural Texture Generator",
  "version": "0.0.0",
  "author": "Jan Forst <ensonador@gmail.com>",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-es2015": "6.22.0",
    "babel-register": "6.23.0",
    "babelrc-rollup": "3.0.0",
    "chai": "^3.5.0",
    "d3-random": "^1.0.2",
    "d3-scale": "^1.0.4",
    "glsl-blend": "^1.0.3",
    "glsl-checker": "^1.0.1",
    "glsl-cos-palette": "^1.0.0",
    "glsl-deparser": "^1.0.0",
    "glsl-fxaa": "^3.0.0",
    "glsl-gradient-palette": "^1.0.0",
    "glsl-noise": "0.0.0",
    "glsl-parser": "^2.0.0",
    "glsl-random": "0.0.5",
    "glsl-tokenizer": "^2.1.2",
    "glsl-worley": "^1.0.2",
    "glslify": "^6.0.1",
    "json-stringify-pretty-compact": "^1.0.2",
    "mocha": "^3.2.0",
    "rimraf": "^2.6.1",
    "rollup": "0.41.4",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-json": "^2.1.0",
    "rollup-plugin-node-builtins": "2.0.0",
    "rollup-plugin-node-globals": "1.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-uglify": "1.0.1",
    "rollup-watch": "^3.2.2",
    "three": "^0.84.0",
    "umd": "^3.0.1"
  },
  "license": "MIT",
  "main": "components/glt/glt.js",
  "module": "components/glt/index.js",
  "private": true,
  "scripts": {
    "all": "npm run clean && npm run gl && npm run js:glt && npm run js:glt-samples",
    "clean": "rimraf components/glt-samples/glt-samples.* components/glt-extractor/glt-extractor.* components/glt/glt.* components/glt/glsl/glsl.*",
    "gl": "npm run gl:glslify && npm run gl:minify && npm run js:glt-extractor && npm run gl:extractor",
    "gl:extractor": "node components/glt-extractor/glt-extractor.js > components/glt/glsl/glsl.min.json",
    "gl:glslify": "glslify components/glt/glsl/index.glsl -o components/glt/glsl/glsl.glsl",
    "gl:minify": "node components/glt-minify/glt-minify.js components/glt/glsl/glsl.glsl",
    "js:glt": "rollup -n glt -c components/glt/rollup.config.js",
    "js:glt-extractor": "rollup -n glt -c components/glt-extractor/rollup.config.js",
    "js:glt-samples": "rollup -n glt -c components/glt-samples/rollup.config.js",
    "js:glt-samples:watch": "rollup -w -n glt -c components/glt-samples/rollup.config.js",
    "js:glt:watch": "rollup -w -n glt -c components/glt/rollup.config.js",
    "test": "mocha --compilers js:babel-core/register",
    "umd:cjson": "umd CJSON -c node_modules/json-stringify-pretty-compact/index.js | uglifyjs > components/cjson/cjson.js"
  }
}
